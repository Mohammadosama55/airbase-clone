<% layout('layouts/boilerplate') %>

<div class="form-container">
  <h3 class="mb-4 text-center">Edit Listing</h3>
  <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
    
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" type="text" class="form-control" id="title" value="<%= listing.title %>" required />
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" id="description" rows="4" required><%= listing.description %></textarea>
    </div>
     <!-- Current Image -->
<div class="mb-3">
  <label class="form-label">Current Image</label>
  <% if (listing.image) { %>
    <img src="<%= typeof listing.image === 'object' ? listing.image.url : listing.image %>" 
         class="img-thumbnail mb-2" style="max-height: 200px;">
  <% } %>

  <!-- File Input -->
  <input type="file" name="image" class="form-control" accept="image/*">

  <!-- Hidden field with current image URL -->
  <input type="hidden" name="listing[imageUrl]" 
         value="<%= typeof listing.image === 'object' ? listing.image.url : listing.image %>">
</div>
    <!-- Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input name="listing[price]" type="number" class="form-control" id="price" value="<%= listing.price %>" />
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input name="listing[country]" type="text" class="form-control" id="country" value="<%= listing.country %>" />
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" type="text" class="form-control" id="location" value="<%= listing.location %>" />
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <button type="submit" class="btn btn-submit">Update Listing</button>
    </div>
  </form>
</div>