
<% layout('layouts/boilerplate') %>

<style>
  body {
    font-family: 'Plus Jakarta Sans', sans-serif;
    background-color: #f8f9fa;
  }

  .listing-container {
    max-width: 700px;
    margin: 60px auto;
    padding: 30px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .listing-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1f2937;
  }

  .listing-desc {
    font-size: 1rem;
    color: #4b5563;
    margin-top: 10px;
  }

  .listing-meta {
    font-size: 0.95rem;
    color: #6b7280;
    margin-top: 15px;
  }

  .btn-custom {
    background-color: #1f2937;
    color: white;
    font-weight: 500;
    padding: 8px 20px;
    border-radius: 8px;
    text-decoration: none;
    display: inline-block;
    margin-right: 10px;
    transition: background-color 0.3s ease;
  }

  .btn-custom:hover {
    background-color: #111827;
  }

  .btn-delete {
    background-color: #ef4444;
    color: white;
    font-weight: 500;
    padding: 8px 20px;
    border-radius: 8px;
    border: none;
    transition: background-color 0.3s ease;
  }

  .btn-delete:hover {
    background-color: #dc2626;
  }
</style>

<div class="listing-container">
  <h3 class="listing-title"><%= listing.title %></h3>
  <p class="listing-desc"><%= listing.description %></p>

  <ul class="list-unstyled listing-meta">
    <li><strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %></li>
    <li><strong>Location:</strong> <%= listing.location %></li>
    <li><strong>Country:</strong> <%= listing.country %></li>
  </ul>

  <div class="mt-4">
    <a href="/listings/<%= listing._id %>/edit" class="btn-custom">Edit Listing</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
      <button type="submit" class="btn-delete">Delete Listing</button>
    </form>
  </div>
</div>