
<<%- layout('layouts/boilerplate') %>



<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm border-0">
        <!-- Image -->
        <% if(listing.image) { %>
          <img src="<%= listing.image.url || listing.image %>" class="card-img-top" alt="<%= listing.title %>" style="height: 20rem; object-fit: cover;">
        <% } else { %>
          <img src="/images/default-listing.jpg" class="card-img-top" alt="Default listing image" style="height: 20rem; object-fit: cover;">
        <% } %>

        <!-- Card Body -->
        <div class="card-body">
          <h3 class="listing-title mb-3"><%= listing.title %></h3>
          <p class="listing-desc mb-4"><%= listing.description %></p>

          <ul class="list-unstyled listing-meta">
            <li><strong>Price:</strong> â‚¹ <%= listing.price.toLocaleString("en-IN") %></li>
            <li><strong>Location:</strong> <%= listing.location %></li>
            <li><strong>Country:</strong> <%= listing.country %></li>
          </ul>
        </div>

        <!-- Card Footer -->
        <div class="card-footer bg-white border-top d-flex justify-content-between align-items-center">
          <a href="/listings/<%= listing._id %>/edit" class="btn-custom">Edit Listing</a>

          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
            <button type="submit" class="btn-delete">Delete Listing</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>