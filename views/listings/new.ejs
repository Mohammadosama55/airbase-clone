<% layout('layouts/boilerplate') %>

<!-- Load Plus Jakarta Sans from Google Fonts -->
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<style>
  body {
    font-family: 'Plus Jakarta Sans', sans-serif;
    background-color: #f8f9fa;
  }

  .form-container {
    max-width: 600px;
    margin: 60px auto;
    padding: 30px;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .form-label {
    font-weight: 600;
  }

  .form-control,
  textarea {
    border-radius: 8px;
    padding: 12px 16px;
    font-size: 1rem;
    border: 1px solid #ccc;
    transition: border-color 0.3s ease;
  }

  .form-control:focus,
  textarea:focus {
    border-color: #6c757d;
    box-shadow: 0 0 0 0.2rem rgba(108, 117, 125, 0.25);
  }

  .btn-submit {
    background-color: #1f2937;
    color: white;
    font-weight: 600;
    padding: 12px 30px;
    border-radius: 8px;
    border: none;
    transition: background-color 0.3s ease;
  }

  .btn-submit:hover {
    background-color: #111827;
  }
</style>

<div class="form-container">
  <h3 class="mb-4 text-center">Create a New Listing</h3>
  <form method="POST" action="/listings">
    
    <!-- Title -->
    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input name="listing[title]" type="text" class="form-control" id="title" placeholder="Enter title" required />
    </div>

    <!-- Description -->
    <div class="mb-3">
      <label for="description" class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control" id="description" rows="4" placeholder="Enter description" required></textarea>
    </div>

    <!-- Image URL -->
    <div class="mb-3">
      <label for="image" class="form-label">Image URL</label>
      <input name="listing[image]" type="text" class="form-control" id="image" placeholder="Enter image URL or link" />
    </div>

    <!-- Price -->
    <div class="mb-3">
      <label for="price" class="form-label">Price</label>
      <input name="listing[price]" type="number" class="form-control" id="price" placeholder="Enter price" />
    </div>

    <!-- Country -->
    <div class="mb-3">
      <label for="country" class="form-label">Country</label>
      <input name="listing[country]" type="text" class="form-control" id="country" placeholder="Enter country" />
    </div>

    <!-- Location -->
    <div class="mb-3">
      <label for="location" class="form-label">Location</label>
      <input name="listing[location]" type="text" class="form-control" id="location" placeholder="Enter location" />
    </div>

    <!-- Submit Button -->
    <div class="d-grid">
      <button type="submit" class="btn btn-submit">Add Listing</button>
    </div>
  </form>
</div>