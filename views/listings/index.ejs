<% layout('layouts/boilerplate') %>
<body>
  <h3>All Listings</h3>
  <!-- <form method="GET" action="/listings/new">
    <button class="btn btn-primary">Create New Listing</button>
  </form> -->
  
  <div class="row">
    <% for(let listing of allListings) { %>
      <div class="col-md-4 mb-4">
        <div class="card" style="width: 18rem;">
          <% if(listing.image) { %>
            <img src="<%= listing.image.url || listing.image %>" class="card-img-top" alt="<%= listing.title %>">
          <% } else { %>
            <img src="/images/default-listing.jpg" class="card-img-top" alt="Default listing image">
          <% } %>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text"><%= listing.description %></p>
            
          </div>
        </div>
      </div>
    <% } %>
  </div>
</body>